            // 방법 2. <div 선언>
            var s_letter = prompt("소문자 알파벳을 입력하세요 : ");

            if (s_letter == "a" || s_letter == "e" || s_letter == "i" || s_letter == "o" || s_letter == "u") 
            {
                document.getElementById("vowel").innerHTML = s_letter + "는 모음입니다.";
            }
            else 
            {
                document.getElementById("vowel").innerHTML = s_letter + "는 자음입니다.";
            }
        </script>
